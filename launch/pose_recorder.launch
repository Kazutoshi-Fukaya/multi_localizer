<?xml version="1.0"?>
<launch>
    <arg name="config_path" default="$(find multi_localizer)/config" />
	
	<!-- roomba1 -->
	<node pkg="multi_localizer" type="pose_recorder" name="roomba1_pose_recorder" >
		<param name="ROBOT_NAME"       value="roomba1" />
		<param name="RECORD_FILE_PATH" value="$(find multi_localizer)/record/" />
	</node>

	<!-- roomba2 -->
	<node pkg="multi_localizer" type="pose_recorder" name="roomba2_pose_recorder" >
		<param name="ROBOT_NAME"       value="roomba2" />
		<param name="RECORD_FILE_PATH" value="$(find multi_localizer)/record/" />
	</node>
</launch>